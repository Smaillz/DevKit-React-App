{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noEmitOnError": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "paths": {
            "*": ["./node_modules/@types/*"],
            "@resources": ["./resources/index"],
            "@resources/*": ["./resources/*"],
            "@models": ["./src/Models/index"],
            "@consts": ["./src/Constants/index"],
            "@actions/*": ["./src/Actions/*"],
            "@thunk/*": ["./src/Thunk/*"],
            "@containers/*": ["./src/Containers/*"],
            "@components/*": ["./src/Components/*"],
            "@utils": ["./src/Utils"],
        }
    },
    "include": [
        "./src/**/*",
        "./resources/**/*.ts",
        "./temp/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "__tests__/**/*.spec.ts"
    ]
}